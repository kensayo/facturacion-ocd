
<div class="container mx-auto p-4 md:p-8">
  <header class="flex flex-col sm:flex-row justify-between items-center p-4 bg-white rounded-lg shadow">
    <h1 class="text-2xl font-semibold text-gray-700 mb-2 sm:mb-0">
      <i class="fas fa-shield-halved mr-3 text-indigo-600"></i>Panel de Administración de Caja
    </h1>
    <div class="text-sm text-gray-500">
      <i class="fas fa-user mr-1"></i><span id="user-name" class="font-medium"><%= current_user.full_name %></span>
      <%= button_to 'Cerrar Sesion', logout_path, method: :delete %>
    </div>
  </header>


  <section class="container mx-auto px-4 py-8">

<!--    GESTIONAR USUARIOS-->
    <section class="p-6 m-6 bg-white rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-6 text-gray-700 border-b pb-2">
        <i class="fas fa-users mr-2 text-green-500"></i>Gestionar Usuarios
      </h2>
      <turbo-frame id="user_form_container" data-controller="user-form">
        <%= render 'users/form' %>
      </turbo-frame>

      <div class="overflow-x-auto">
        <table class="divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="w-6/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre
              Completo
            </th>
            <th scope="col" class="w-3/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Casa</th>
            <th scope="col" class="w-3/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
          </thead>
          <tbody id="operators-list" class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <%= render 'users/user_row', user: user %>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
<!--    GESTIONAR RUBROS-->
    <section class="p-6 m-6 bg-white rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-6 text-gray-700 border-b pb-2">
        <i class="fas fa-car mr-2 text-green-500"></i>Gestionar Rubros
      </h2>

      <turbo-frame id="transaction_type_form_container" data-controller="transaction_type-form">
        <%= render 'transaction_types/form' %>
      </turbo-frame>

      <div class="overflow-x-auto">
        <table class="divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="w-4/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th scope="col" class="w-5/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descripcion</th>
            <th scope="col" class="w-2/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Codigo</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Eliminar</th>
          </tr>
          </thead>
          <tbody id="transaction_types-list" class="bg-white divide-y divide-gray-200">
          <% @transaction_types.each do |transaction_type| %>
            <%= render 'transaction_types/transaction_types_list', transaction_type: transaction_type %>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
<!--    GESTIONAR MONEDAS-->
    <section class="p-6 m-6 bg-white rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-6 text-gray-700 border-b pb-2">
        <i class="fas fa-coins mr-2 text-green-500"></i>Gestionar Monedas
      </h2>

      <turbo-frame id="currency_form_container" data-controller="currency-form">
        <%= render 'currencies/form' %>
      </turbo-frame>

      <div class="overflow-x-auto">
        <table class="divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="w-1/6 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código</th>
            <th scope="col" class="w-3/6 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th scope="col" class="w-1/6 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Símbolo</th>
            <th scope="col" class="w-1/6 px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Eliminar</th>
          </tr>
          </thead>
          <tbody id="currencies-list" class="bg-white divide-y divide-gray-200">
          <% @currencies.each do |currency| %>
            <%= render 'currencies/currency_list', currency: currency %>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
<!--    GESTIONAR CASAS-->
    <section class="p-6 m-6 bg-white rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-6 text-gray-700 border-b pb-2">
        <i class="fas fa-house mr-2 text-green-500"></i>Gestionar Casas
      </h2>
<!--      <turbo-frame id="user_form_container" data-controller="user-form">-->
        <%#= render 'users/form' %>
<!--      </turbo-frame>-->

      <div class="overflow-x-auto">
        <table class="divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="w-3/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ciudad</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">País</th>
            <th scope="col" class="w-2/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dirección</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre Codigo</th>
            <th scope="col" class="w-1/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código</th>
            <th scope="col" class="w-2/12 px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Correo</th>
          </tr>
          </thead>
          <tbody id="operators-list" class="bg-white divide-y divide-gray-200">
          <% @houses.each do |house| %>
            <%= render 'houses/house_list', house: house %>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </section>

</div>