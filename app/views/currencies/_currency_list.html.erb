<%# The ID here is crucial for Turbo Stream to target specific rows %>
<tr id="<%= dom_id(currency) %>">
  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700"><%= currency.code %></td>
  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700"><%= currency.name %></td>
  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700"><%= currency.symbol %></td>
  <td class="px-4 py-3 whitespace-nowrap text-center text-sm text-gray-700">
    <%= form_with(url: currency_path(currency), method: :delete, local: true, data: { turbo_confirm: '¿Estás seguro de que quieres eliminar esta moneda?' }, class: "inline-block") do |form| %>
      <button type="submit" class="text-red-600 hover:text-red-800" title="Eliminar">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </td>
</tr>