<%# The ID here is crucial for Turbo Stream to target specific rows %>
<tr id="<%= dom_id(transaction_type) %>">
  <td class="px-4 py-3 text-sm text-gray-700"><%= transaction_type.name %></td>
  <td class="px-4 py-3 text-sm text-gray-700"><%= transaction_type.description %></td>
  <td class="px-4 py-3 text-sm text-gray-700"><%= transaction_type.code %></td>
  <td class="px-4 py-3 text-center text-sm text-gray-700">
    <%= form_with(url: transaction_type_path(transaction_type), method: :delete, local: true, data: { turbo_confirm: '¿Estás seguro de que quieres eliminar esta moneda?' }, class: "inline-block") do |form| %>
      <button type="submit" class="text-red-600 hover:text-red-800" title="Eliminar">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </td>
</tr>