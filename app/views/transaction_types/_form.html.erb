<!--<form id="currency-form" class="mb-6 space-y-4">-->
<%= form_with(model: @transaction_type, class: "mb-6 space-y-4",
              id: "new_transaction_type_form",
              data: { turbo_frame: 'transaction_type_form_container' }) do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.label :name, "Nombre", class: "block text-sm font-medium text-gray-600 mb-1" %>
      <%= f.text_field :name, required: true, placeholder: "Nombre",
                       class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= f.label :description, "Descripción", class: "block text-sm font-medium text-gray-600 mb-1" %>
      <%= f.text_field :description, required: true, placeholder: "Descripción",
                       class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= f.label :code, "Código", class: "block text-sm font-medium text-gray-600 mb-1" %>
      <%= f.text_field :code, required: true, placeholder: "Codigo",
                       class: "w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>
  <input type="hidden" id="transaction_type-original-code" name="transaction_type-original-code">
  <div class="flex justify-center mt-4">
<!--    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-200 ease-in-out">-->
<!--      <i class="fas fa-save mr-2"></i><span id="currency-form-button-text">Agregar Moneda</span>-->
<!--    </button>-->
    <%= f.submit 'Guardar Rubro', class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-200 ease-in-out flex items-center" %>
    <% if !@transaction_type.new_record? %>
      <%= link_to new_transaction_types_path,
                  class: "bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-200 ease-in-out flex items-center ml-2",
                  data: { turbo_frame: 'transaction_type_form_container' } do %>
        <i class="fas fa-times mr-2"></i>Cancelar
      <% end %>
    <% end %>
  </div>
<% end %>