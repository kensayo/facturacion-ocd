<% provide(:title, "Log In") %> # Si usas un helper para el título de la página
<h1>Iniciar Sesión</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
    <% end %>

    <%# Opcional: enlace a la página de registro si tienes una %>
    <%# <p>¿Nuevo usuario? <%= link_to "Regístrate ahora!", signup_path %></p> %>
  </div>
</div>